{
	"buildCommand": "tsc && vite build",
	"outputDirectory": "dist",
	"installCommand": "yarn install",
	"framework": "vite",
	"redirects": [
		{
			"source": "/api/(.*)",
			"destination": "http://127.0.0.1:5173/api/$1"
		}
	],
	"rewrites": [
		{
			"source": "/api/cookies/(.*)",
			"destination": "/api/cookies.ts"
		},
		{
			"source": "/api/auth/(.*)",
			"destination": "/api/auth.ts"
		}
	],
	"headers": [
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "X-Frame-Options",
					"value": "SAMEORIGIN"
				},
				{
					"key": "X-XSS-Protection",
					"value": "1; mode=block"
				},
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "Referrer-Policy",
					"value": "strict-origin-when-cross-origin"
				}
			]
		}
	]
}
