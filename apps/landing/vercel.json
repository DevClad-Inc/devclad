{
	"buildCommand": "vite build",
	"outputDirectory": "dist/client",
	"installCommand": "yarn install",
	"framework": "vite",
	"rewrites": [
		{
			"source": "/((?!assets/).*)",
			"destination": "/api/ssr.js"
		}
	],
	"headers": [
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "X-Frame-Options",
					"value": "SAMEORIGIN"
				},
				{
					"key": "X-XSS-Protection",
					"value": "1; mode=block"
				},
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "Referrer-Policy",
					"value": "strict-origin-when-cross-origin"
				}
			]
		}
	]
}
